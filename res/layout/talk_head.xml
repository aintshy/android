<RelativeLayout xmlns:a="http://schemas.android.com/apk/res/android"
    a:layout_width="fill_parent"
    a:layout_height="fill_parent"
    a:padding="6dip">
    <ImageView
        a:layout_width="200dp"
        a:layout_height="200dp"
        a:scaleType="fitXY"
        a:id="@+id/photo"
        a:layout_centerHorizontal="true"
        a:contentDescription="photo"/>
    <TextView
        a:id="@+id/human"
        a:layout_width="fill_parent"
        a:layout_height="40dip"
        a:layout_below="@+id/photo"
        a:text="..."
        a:layout_centerHorizontal="true"
        a:textAlignment="center"
        a:gravity="center"
        a:textSize="24sp"
        a:textColor="@color/black"/>
    <EditText
        a:layout_width="fill_parent"
        a:layout_height="wrap_content"
        a:id="@+id/answer"
        a:layout_below="@+id/human"
        a:inputType="text"
        a:enabled="true"
        a:focusable="true"
        a:maxLines="1"
        a:singleLine="true"
        a:layout_centerHorizontal="true"
        a:textColor="@color/black"/>
</RelativeLayout>
