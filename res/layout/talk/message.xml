<RelativeLayout xmlns:a="http://schemas.android.com/apk/res/android"
    a:layout_width="fill_parent"
    a:layout_height="?android:attr/listPreferredItemHeight"
    a:padding="6dip" >
    <ImageView
        a:id="@+id/icon"
        a:layout_width="wrap_content"
        a:layout_height="fill_parent"
        a:layout_alignParentBottom="true"
        a:layout_alignParentTop="true"
        a:layout_marginRight="6dip"
        a:contentDescription="TODO"
        a:src="@drawable/ic_launcher" />
    <TextView
        a:id="@+id/secondLine"
        a:layout_width="fill_parent"
        a:layout_height="26dip"
        a:layout_alignParentBottom="true"
        a:layout_alignParentRight="true"
        a:layout_toRightOf="@id/icon"
        a:ellipsize="marquee"
        a:singleLine="true"
        a:text="Description"
        a:textSize="12sp" />

    <TextView
        a:layout_width="fill_parent"
        a:layout_height="wrap_content"
        a:layout_above="@id/secondLine"
        a:layout_alignParentRight="true"
        a:layout_alignParentTop="true"
        a:layout_alignWithParentIfMissing="true"
        a:layout_toRightOf="@id/icon"
        a:gravity="center_vertical"
        a:text="Example application"
        a:textSize="16sp" />

</RelativeLayout>
