<RelativeLayout xmlns:a="http://schemas.android.com/apk/res/android"
    a:layout_width="match_parent"
    a:layout_height="wrap_content"
    a:padding="6dip">
    <LinearLayout
        a:layout_width="match_parent"
        a:layout_height="wrap_content"
        a:orientation="horizontal">
        <ImageView
            a:layout_width="80dp"
            a:layout_height="80dp"
            a:scaleType="fitXY"
            a:id="@+id/photo"
            a:contentDescription="photo"/>
        <LinearLayout
            a:layout_width="match_parent"
            a:layout_height="wrap_content"
            a:orientation="vertical">
            <TextView
                a:id="@+id/text"
                a:layout_width="match_parent"
                a:layout_height="wrap_content"
                a:text="..."
                a:textSize="24sp"
                a:textColor="@color/black"/>
            <TextView
                a:id="@+id/message"
                a:layout_width="match_parent"
                a:layout_height="wrap_content"
                a:text=""
                a:textSize="20sp"
                a:textColor="@color/black"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
